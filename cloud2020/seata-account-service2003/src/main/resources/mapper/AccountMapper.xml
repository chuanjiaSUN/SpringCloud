<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//com.scj.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.scj.springcloud.mapper.AccountMapper">

    <update id="decrease">
        UPDATE
            t_account
        SET
            residue = residue - #{money}, used = used + #{money}
        WHERE
            user_id = #{userId};
    </update>

</mapper>